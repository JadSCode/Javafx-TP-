   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="Fichier">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Fermer" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="A propos">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#handleAbout" text="A propos" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
